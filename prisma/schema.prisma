generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name                 String
  email                String @unique
  password             String
  role                 Role   @default(USER)
  profileImage         String
  favouriteSnack       Int?
  totalEatenSnacks     Int    @default(0)
  totalBrownBreadEaten Int    @default(0)
  totalWhiteBreadEaten Int    @default(0)

  orders Order[]
}

enum Role {
  USER
  ADMIN
}

model Snack {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name         String         @unique
  image        String
  SnackToOrder SnackToOrder[]
}

model Session {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  snacks    SnackToOrder[]
  whiteBuns Int            @default(0)
  brownBuns Int            @default(0)

  session   Session? @relation(fields: [sessionId], references: [id])
  sessionId Int?

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model SnackToOrder {
  id        Int      @id @default(autoincrement())
  snack   Snack @relation(fields: [snackId], references: [id])
  snackId Int

  order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?
}
