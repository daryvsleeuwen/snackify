generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name                 String
  profileImage         String
  favouriteSnack       Snack  @relation(fields: [snackId], references: [id])
  totalEatenSnacks     Int
  totalBrownBreadEaten Int
  totalWhiteBreadEaten Int
  snackId              Int
}

model Snack {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String
  image String

  Order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?
  User    User[]
}

model Session {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    Int
  snacks    Snack[]
  Session   Session? @relation(fields: [sessionId], references: [id])
  sessionId Int?
}
